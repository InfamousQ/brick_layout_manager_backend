{
    "name": "InfamousQ/brick_layout_manager_rest_api",
    "description": "REST API for brick_layout_manager",
    "type": "project",
    "homepage": "https://github.com/InfamousQ/brick_layout_manager_rest_api",
    "authors": [
        {
            "name": "Tuomas Kukkamaa",
            "email": "theq@netti.fi",
            "homepage": "https://infamousq.github.io/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "cartalyst/sentinel": "2.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\" : "src/controllers/",
            "Tests\\": "tests/"
